<scene version='3.0.0'>
    <default name="spp" value="128"/>
    <default name="max_depth" value="-1" />


<!-- integrator -->
    <integrator type='volpath'>
        <integer name="max_depth" value="$max_depth"/>
        <integer name="rr_depth" value="50"/>
    	<boolean name="hide_emitters" value="True"/>
    </integrator>


<!-- emitter -->
    <emitter type="point" id="light1">
    	<rgb name='intensity' value='150000 150000 150000'/>
        <!--<rgb name="intensity" value="100.0"/>-->
        <transform name="to_world">
            <translate x="-2.944557" y="48.8898" z="-41.4402"/>
        </transform>
    </emitter>

